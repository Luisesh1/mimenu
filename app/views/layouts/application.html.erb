<!DOCTYPE html>
<html ng-app = "MiMenu">
<head>
  <title>Menu</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul id="web" class="dropdown-content">
    <% if current_user.nil?%>
      <li><a href="<%= new_user_session_path %>"><i class="large material-icons">person</i> Perfil</a></li>
    <%else%>
      <li><a href="<%= perfil_path %>"><i class="large material-icons">person</i>Perfil</a></li>
    <%end%>
    <li class="divider"></li>
    <% unless current_user.nil?%>
      <li><a href="<%= destroy_user_session_path %>" data-method="delete"><i class="large material-icons">exit_to_app</i> Salir </a></li> 
    <%end%>
  </ul>
  
  <ul id="mobile" class="dropdown-content">
    <% if current_user.nil?%>
      <li><a href="<%= new_user_session_path %>"><i class="large material-icons">person</i> Perfil</a></li>
    <%else%>
      <li><a href="<%= perfil_path %>"><i class="large material-icons">person</i>Perfil</a></li>
    <%end%>
    <li class="divider"></li>
    <% unless current_user.nil?%>
      <li><a href="<%= destroy_user_session_path %>" data-method="delete"><i class="large material-icons">exit_to_app</i> Salir </a></li> 
    <%end%>
  </ul>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper container">
        <a href="/" class="brand-logo">Mi Menu</a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        
        <ul class="right hide-on-med-and-down">
          <li><a href="<%= platillos_explorar_path%>"><i class="large material-icons">restaurant_menu</i></a></li>
          <li><a href="<%= restaurantes_explorar_path %>"><i class="large material-icons">restaurant</i></a></li>
          <li><a href="mobile.html"><i class="large material-icons">favorite</i></a></li>
          <li><a class="dropdown-trigger" href="#!" data-target="web"><i class="material-icons right">person</i><i class="material-icons right">arrow_drop_down</i></a></li>
          
        </ul>
      </div>
    </nav>
  </div>
  <ul class="sidenav" id="mobile-demo">
    <li><a href="<%= platillos_explorar_path %>"><i class=" material-icons">restaurant_menu</i> Platillos</a></li>
    <li><a href="<%= restaurantes_explorar_path %>"><i class=" material-icons">restaurant</i> Restaurantes</a></li>
    <li><a href="mobile.html"><i class=" material-icons">favorite</i> Mis Favoritos</a></li>
    <li><a class="dropdown-trigger" href="#!" data-target="mobile"><i class="material-icons right">person</i><i class="material-icons">arrow_drop_down</i>Mi Perfil</a></li>
  </ul>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
