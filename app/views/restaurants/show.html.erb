<p id="notice"><%= notice %></p>
<div class="card-panel z-depth-3">
  <div class="row">
    <h3 class="center-align">
      <strong>Nombre:</strong>
    </h3>
    <h4 class="center-align">
        <p>
          <%= @restaurant.nombre %>
        </p>
      </h4>
  </div>
</div>
<div class = "card-panel z-depth-3">
  <div class="row">
    <div class = "col s12 m5 l4">
      <%= image_tag(@restaurant.avatar, class:"circle responsive-img")%>
    </div>  
    <div class = "col s12 m6 l7 offset-s1 offset-m1 offset-l1">
      <p>
        <strong>Descripcion:</strong>
        <%= @restaurant.descripcion %>
      </p>
      
      <p>
        <strong>Codigo postal:</strong>
        <%= @restaurant.codigo_postal %>
      </p>
      
      <p>
        <strong>Telefono:</strong>
        <%= @restaurant.telefono %>
      </p>
      <%= link_to 'Editar Restaurante', edit_restaurant_path(@restaurant),class:"waves-effect waves-light btn" %> 
    </div>  
  </div>
</div>

<%= link_to 'Atras', perfil_path,class:"waves-effect waves-light btn" %>
