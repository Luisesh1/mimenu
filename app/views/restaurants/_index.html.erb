
  <table class = "responsive-table">
    <thead>
      <tr>
        <th></th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Codigo postal</th>
        <th>Telefono</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= image_tag(restaurant.avatar.mini.url,class:"circle responsive-img")%></td>
          <td><%= restaurant.nombre %></td>
          <td><%= restaurant.descripcion %></td>
          <td><%= restaurant.codigo_postal %></td>
          <td><%= restaurant.telefono %></td>
          <td><%= link_to 'Show', restaurant %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
          <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
